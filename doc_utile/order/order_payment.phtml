<section class="payment-form">
    <h2>Paiement sécurisé</h2>
    <form id="payment-form">
      <div class="form-group">
        <label for="card-holder">Titulaire de la carte</label>
        <input type="text" id="card-holder" name="card-holder" required>
      </div>
      <div class="form-group">
        <label for="card-number">Numéro de carte</label>
        <input type="text" id="card-number" name="card-number" required pattern="\d{16}" maxlength="16" placeholder="1234 5678 9012 3456">
      </div>
      <div class="card-details">
        <div class="form-group">
          <label for="expiry-date">Date d'expiration</label>
          <input type="text" id="expiry-date" name="expiry-date" required pattern="\d{2}/\d{2}" maxlength="5" placeholder="MM/YY">
        </div>
        <div class="form-group">
          <label for="cvv">CVV</label>
          <input type="number" id="cvv" name="cvv" required min="100" max="999">
        </div>
      </div>
      <button type="submit" class="submit-btn">Payer 714.00€</button>
    </form>
    <div class="payment-icons">
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
