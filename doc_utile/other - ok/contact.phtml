<section class="form-container">
  <h2>Contactez-nous</h2>
  <div class="contact-container">
    <form class="contact-form">
      <div class="input-group">
        <label for="name">Nom</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="input-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="input-group">
        <label for="subject">Sujet</label>
        <input type="text" id="subject" name="subject" required>
      </div>
      <div class="input-group">
        <label for="message">Message</label>
        <textarea id="message" name="message" required></textarea>
      </div>
      <button type="submit">Envoyer</button>
    </form>

    <div class="contact-info">
      <div class="paragraph">
        <h3>Adresse</h3>
        <p>123 Avenue des Aventuriers, 75001 Paris, France</p>
      </div>
      <div class="paragraph">
        <h3>Téléphone</h3>
        <p>+33 1 23 45 67 89</p>
      </div>
      <div class="paragraph">
        <h3>Email</h3>
        <p>contact@locavan.com</p>
      </div>
      <div class="paragraph">
        <h3>Horaires d'ouverture</h3>
        <p>Lundi - Vendredi : 9h00 - 18h00</p>
        <p>Samedi : 10h00 - 16h00</p>
        <p>Dimanche : Fermé</p>
      </div>
      <div class="social-links">
        <a href="https://facebook.com/locavan" target="_blank">
          <i class="fa-brands fa-facebook-f"></i>
        </a>
        <a href="https://twitter.com/locavan" target="_blank">
          <i class="fa-brands fa-twitter"></i>
        </a>
        <a href="https://instagram.com/locavan" target="_blank">
          <i class="fa-brands fa-instagram"></i>
        </a>
      </div>
    </div>
  </div>
</section>